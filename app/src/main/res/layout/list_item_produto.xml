<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/descricao_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_level_15"
        android:layout_marginTop="@dimen/spacing_level_15"
        android:text="@string/descricao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/descrição"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_level_15"
        android:layout_marginEnd="@dimen/spacing_level_5"
        android:hint="@string/tipo"
        android:inputType="textAutoComplete"
        android:maxLength="15"
        android:maxLines="1"
        android:minHeight="48dp"
        app:layout_constraintEnd_toStartOf="@+id/quantidade"
        app:layout_constraintStart_toStartOf="@+id/descricao_txt"
        app:layout_constraintTop_toBottomOf="@+id/descricao_txt" />

    <TextView
        android:id="@+id/quantidade_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_level_25"
        android:text="@string/quantidade"
        app:layout_constraintStart_toEndOf="@+id/descricao_txt"
        app:layout_constraintTop_toTopOf="@+id/descricao_txt" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/quantidade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_level_15"
        android:layout_marginEnd="@dimen/spacing_level_5"
        android:hint="@string/quantidades"
        android:inputType="number"
        android:maxLength="10"
        android:maxLines="1"
        android:minHeight="48dp"
        app:layout_constraintEnd_toStartOf="@+id/valor"
        app:layout_constraintStart_toStartOf="@+id/quantidade_txt"
        app:layout_constraintTop_toBottomOf="@+id/quantidade_txt" />

    <TextView
        android:id="@+id/valor_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_level_25"
        android:text="@string/valor"
        app:layout_constraintStart_toEndOf="@+id/quantidade_txt"
        app:layout_constraintTop_toTopOf="@+id/quantidade_txt" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/valor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_level_15"
        android:layout_marginEnd="@dimen/spacing_level_5"
        android:hint="@string/zero"
        android:inputType="numberDecimal"
        android:maxLength="10"
        android:maxLines="1"
        android:minHeight="48dp"
        app:layout_constraintEnd_toStartOf="@+id/total"
        app:layout_constraintStart_toStartOf="@+id/valor_txt"
        app:layout_constraintTop_toBottomOf="@+id/valor_txt" />


    <TextView
        android:id="@+id/total_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_level_25"
        android:text="@string/total"
        app:layout_constraintStart_toEndOf="@+id/valor_txt"
        app:layout_constraintTop_toTopOf="@+id/valor_txt" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_level_15"
        android:layout_marginEnd="@dimen/spacing_level_15"
        android:hint="@string/zero"
        android:inputType="numberDecimal"
        android:maxLength="10"
        android:maxLines="1"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/total_txt"
        app:layout_constraintTop_toBottomOf="@+id/total_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>