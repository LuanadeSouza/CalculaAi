<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/lista_compras_fragment_dest">

    <fragment
        android:id="@+id/lista_compras_detail_fragment_dest"
        android:name=""
        android:label="Lista Compras Details">
        <action
            android:id="@+id/action_listaComprasDetailFragment_to_addEditTaskFragment"
            app:destination="@id/add_edit_lista_compras_fragment_dest" />
        <argument
            android:name="listaCompraId"
            app:argType="string" />
        <action
            android:id="@+id/action_listaComprasDetailFragment_to_listaComprasFragment"
            app:destination="@id/lista_compras_fragment_dest" />
    </fragment>
    <fragment
        android:id="@+id/statistics_fragment_dest"
        android:name=""
        android:label="@string/app_name">
        <action
            android:id="@+id/action_statisticsFragment_to_listaComprasFragment"
            app:destination="@id/lista_compras_fragment_dest" />
    </fragment>
    <fragment
        android:id="@+id/lista_compras_fragment_dest"
        android:name="br.com.luanadev.calculacompra.presentation.listacompra.ListaCompraFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_listaComprasFragment_to_statisticsFragment"
            app:destination="@id/statistics_fragment_dest" />
        <action
            android:id="@+id/action_listaComprasFragment_to_listaComprasDetailFragment"
            app:destination="@id/lista_compras_detail_fragment_dest" />
        <action
            android:id="@+id/action_listaComprasFragment_to_addEditlistaComprasFragment"
            app:destination="@id/add_edit_lista_compras_fragment_dest" />
        <argument
            android:name="userMessage"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/add_edit_lista_compras_fragment_dest"
        android:name=""
        android:label="{title}">
        <argument
            android:name="listaCompraId"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="false" />
        <action
            android:id="@+id/action_addEditlistaComprasFragment_to_listaComprasFragment"
            app:destination="@id/lista_compras_fragment_dest" />
    </fragment>
    <argument
        android:name="userMessage"
        android:defaultValue="0" />
</navigation>
